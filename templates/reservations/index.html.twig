    <tbody>
    {% for reservation in reservations %}
        <tr id="reservation-{{ reservation.id }}" class="reservation">
            <td class='id'>{{ reservation.id }}</td>
            <td class='guest'>{{ reservation.guest }}</td>
            <td class='checkin'>{{ reservation.checkin }}</td>
            <td class='checkout'>{{ reservation.checkout }}</td>
            <td class='hotel'>{{ reservation.hotel }}</td>
